@model IEnumerable<Dealership.Models.Special>

@{
    ViewBag.Title = "Specials";
}

<h2>Specials</h2>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="row border-box">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-3">
                        <h1>$</h1>
                    </div>
                    <div class="col-lg-9">
                        <h3>@item.SpecialTitle</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-9 col-lg-offset-3">
                        @item.Description
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Styles
{
    <link rel="stylesheet" href="~/Content/specials.css" />
}

