@model Dealership.Models.HomeViewModel
@{
    ViewBag.Title = "Home";
    int index = 0;
}

<div id="carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner" id="specialSlide">
        <div class="item active">
            <img src="~/Content/graybackground.jpg" alt="slide">
            <div class="carousel-caption">
                <h3>@Model.Specials.ElementAt(0).SpecialTitle</h3>
                <p>@Model.Specials.ElementAt(0).Description</p>
            </div>
        </div>

        @for (int i = 1; i < Model.Specials.Count(); i++)
        {
            <div class="item">
                <img src="~/Content/graybackground.jpg" alt="slide">
                <div class="carousel-caption">
                    <h3>@Model.Specials.ElementAt(i).SpecialTitle</h3>
                    <p>@Model.Specials.ElementAt(i).Description</p>
                </div>
            </div>
        }
    </div>
</div>

<hr />

<div class="row">
    <h2>Featured Vehicles</h2>
</div>

<div class="container">
    <div class="row">
        @for (int i = 0; i < Model.Vehicles.Count / 2; i++)
        {
            <div class="col-md-3" id="vehicleBox">
                <div class="row">
                    <div class="col-md">
                        <img src="@String.Format("data:image/*;base64,{0}", Model.Vehicles.ElementAt(i).PictureBase64String)" id="featured-picture" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md">
                        <p>@Model.Vehicles.ElementAt(i).Year @Model.Vehicles.ElementAt(i).Make.DisplayName @Model.Vehicles.ElementAt(i).Model.DisplayName </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md">
                        <p>@Model.Vehicles.ElementAt(i).SalePrice</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        @for (int i = Model.Vehicles.Count / 2; i < Model.Vehicles.Count; i++)
        {
            <div class="col-md-3" id="vehicleBox">
                <div class="row">
                    <div class="col-md">
                        <img src="@String.Format("data:image/*;base64,{0}", Model.Vehicles.ElementAt(i).PictureBase64String)" id="featured-picture" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md">
                        <p>@Model.Vehicles.ElementAt(i).Year @Model.Vehicles.ElementAt(i).Make.DisplayName @Model.Vehicles.ElementAt(i).Model.DisplayName </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md">
                        <p>@Model.Vehicles.ElementAt(i).SalePrice</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>





@section Scripts
{
    <script src="~/Scripts/home.js"></script>
}

@section Styles
{
    <link rel="stylesheet" href="~/Content/home.css" />
}