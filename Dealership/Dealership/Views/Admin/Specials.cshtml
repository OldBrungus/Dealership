@model Dealership.Models.Special
@{
    ViewBag.Title = "Specials";
}

<h2>Specials</h2>

@using (Html.BeginForm())
{
<div class="container">
    <div class="row border-box">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    @Html.LabelFor(model => model.SpecialTitle, "Title")
                    @Html.EditorFor(model => model.SpecialTitle)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @Html.LabelFor(model => model.Description)
                    @Html.EditorFor(model => model.Description)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <input class="a-button" type="submit" value="Save" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 specials-list">

        </div>
    </div>
</div>
}

@section Scripts {
    <script src="~/Scripts/specials.js"></script>    
}

@section Styles {
    <link rel="stylesheet" href="~/Content/core.css" />   
}