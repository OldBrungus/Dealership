@model Dealership.Models.AddModelViewModel

@{
    ViewBag.Title = "Add Model";
    SelectList makes = new SelectList(Model.Makes, "MakeID", "DisplayName");
}

<h2>Add Model</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            <div class="col-md-1">
                <label>New Model</label>
            </div>

            <div class="col-md-5">
                @Html.EditorFor(model => model.ModelName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ModelName, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-1">
                <label>Make</label>
            </div>

            <div class="col-md-5">
                @Html.DropDownListFor(model => model.MakeID, makes)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Make
            </th>

            <th>
                Model
            </th>
        </tr>
    </thead>

    <tbody id="model-table">

    </tbody>
</table>

@section Scripts
{
    <script src="~/Scripts/addModel.js"></script>    
}
